---
import Layout from "../layouts/layout.astro"
import Intro from "../components/Intro.vue"
import Whatsapp from "../components/Whatsapp.vue"
import Form from "../components/Form.vue"
---
<Layout title="Contact Us | AHL Properties" description="Get in touch with us. Our offices are located in Lavington at Lavington mall. We are available for business from Monday through Saturday">
  <Intro 
  	background="/lavington-mall.webp"
  	title="Contact Us"
		description=""
  />
  <div class="container mx-auto mt-12 mb-2 bg-stone-100 dark:bg-stone-900 shadow-md rounded-md" id="book">
    <div class="grid md:grid-cols-2 p-2 gap-x-6 gap-y-2">
    	<div class="grid gap-2 ">
        <h2 class="dark:text-white text-2xl text-stone-800 capitalize font-semibold text-center">
          Get in touch with us
        </h2>
        <p class="dark:text-white">
          See the map below to get to our offices.<br> You can also reach us on 0734 990 660
        </p>
        <iframe class="h-96 w-full rounded-lg mr-4" title="Google Map" width="150" height="50" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJ_ftT_fcZLxgREYfZAHaQuEA&key=AIzaSyCAymKZhNqCjCirV6ZaR3bRTIrFRjr9YAs"></iframe>
      </div>
      <div class="grid p-2 gap-2">
      	<Form client:load />
      </div>
    </div>
  </div>
  <div class="container mx-auto my-4">
  	<div class="grid md:grid-cols-2 gap-4">
  		<div class="grid place-content-center bg-white dark:bg-stone-900 shadow-md p-2 rounded-xl">
        <div class="text-white p-3 text-center w-12 h-12 mb-5 shadow-lg rounded-full bg-amber-600 mx-auto">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <span class="text-stone-800 dark:text-white lg:text-2xl font-semibold">
          Mon &mdash; Fri 8:00 AM - 5:00 PM
        </span>
      </div>
      <div class="grid place-content-center bg-white dark:bg-stone-900 shadow-md p-2 rounded-xl">
        <div class="text-white p-3 text-center w-12 h-12 mb-5 shadow-lg rounded-full bg-amber-600 mx-auto">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <span class="text-stone-800 dark:text-white lg:text-2xl font-semibold">
           Saturday 10:00 AM - 4:00 PM
        </span>
      </div>
  	</div>
  </div>
  <Whatsapp client:load />
</Layout>
